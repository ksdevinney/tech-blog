<div class="card">
    <h4 class="card-header">Log in</h4>
    <form id="login-form">
        <div class="mb-3">
            <label for="login-username" class="form-label">Username</label>
            <input id="login-username" class="form-input" type="text">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-input" id="login-password">
        </div>
        <button type="submit" class="btn btn-warning">Log In</button>
    </form>
</div>

<form id="signup-form">
    <div class="mb-3">
        <label for="username-signup" class="form-label">Username</label>
        <input id="username-signup" class="form-input" type="text">
    </div>
    <div class="mb-3">
        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" class="form-input" type="email">
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-input" id="password-signup">
    </div>
    <button type="submit" class="btn btn-warning">Log In</button>
</form>
</div>

<script src="../public/javascript/login.js"></script>